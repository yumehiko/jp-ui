{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "noUncheckedSideEffectImports": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/pages/**",
    "src/main.tsx",
    "src/App.tsx",
    "src/App.css"
  ]
}
